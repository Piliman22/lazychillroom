# 必須設定
DOMAIN=lazychillroom.com
CERT_PATH=/etc/letsencrypt/live/lazychillroom.com/fullchain.pem
KEY_PATH=/etc/letsencrypt/live/lazychillroom.com/privkey.pem

# 自動設定
SESSION_SECRET=changemeplease # 本番環境では強力なランダム値に変更してください
JWT_SECRET=changemeplease # JWTトークンの署名用
DB_PASSWORD=secret

# 任意設定
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_NAME=lazychill

REDIS_HOST=redis
REDIS_PORT=6379

NODE_ENV=development
PORT=3000
UPLOAD_DIR=/app/uploads

DEBUG=false
LOG_LEVEL=info

# メール設定
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password

# エラートラッキング
SENTRY_DSN=

# 外部ストレージ設定
S3_BUCKET_NAME=
