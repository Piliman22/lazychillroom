# LazyChillRoom v7 - 本番環境設定例
# このファイルを .env.production にコピーして設定を変更してください

NODE_ENV=production
PORT=3000

# PostgreSQL データベース設定（本番環境用）
# 強力なパスワードに変更してください
DB_HOST=postgres
DB_PORT=5432
DB_USER=lazychillroom_user
DB_PASSWORD=CHANGE_THIS_IN_PRODUCTION
DB_NAME=lazychillroom

# PostgreSQL環境変数（Docker標準）
POSTGRES_USER=lazychillroom_user
POSTGRES_PASSWORD=CHANGE_THIS_IN_PRODUCTION
POSTGRES_DB=lazychillroom

# Redis 設定（本番環境用）
# 強力なパスワードに変更してください
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_IN_PRODUCTION
REDIS_DB=0

# JWT設定（本番環境用 - 必ず変更してください）
# 64文字以上のランダムな文字列を生成してください
JWT_SECRET=CHANGE_THIS_JWT_IN_PRODUCTION

# ファイルアップロード設定
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,mp4,webm,pdf,txt,docx

# セキュリティ設定（本番環境用）
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# 本番環境用追加設定
TRUST_PROXY=true
SECURE_COOKIES=true
SESSION_SECURE=true

# SSL設定（SSL証明書がある場合）
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ドメイン設定（SSL使用時）
DOMAIN=your-domain.com
