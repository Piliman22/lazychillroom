# テスト環境用設定
NODE_ENV=test
PORT=3001

# テスト用PostgreSQLデータベース設定
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=lazychillroom_test

# テスト用Redis設定
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# JWT設定
JWT_SECRET=test_jwt_secret_key_for_testing_only
JWT_EXPIRES_IN=1h

# ファイルアップロード設定
UPLOAD_PATH=./test_uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,mp4,webm,pdf,txt,docx

# セキュリティ設定（テスト用）
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=999999
BCRYPT_ROUNDS=4

# セッション設定
SESSION_TTL=3600

# プレゼンス設定
PRESENCE_TTL=60
TYPING_TTL=5
