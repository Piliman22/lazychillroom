{
  "name": "lazychillroom-node",
  "version": "1.0.0",
  "description": "Discord-like chat application built with Node.js",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "NODE_ENV=development npx nodemon backend/server.js",
    "migrate": "node migrations/initPostgreSQL.js",
    "up": "podman-compose up -d",
    "app:up": "podman-compose up -d app",
    "down": "podman-compose down",
    "down-v": "podman-compose down -v",
    "build": "podman-compose build",
    "logs": "podman-compose logs -f",
    "db:up": "podman-compose up -d postgres redis",
    "setup": "npm install && npm run db:up && sleep 15 && npm run migrate",
    "all": "npm run down-v && sleep 5 && npm run build && npm run up && sleep 15 && npm run migrate",
    "prod:deploy": "./deploy-production.sh",
    "prod:auto-setup": "./setup-production.sh",
    "prod:auto": "curl -fsSL https://raw.githubusercontent.com/suzunayui/lazychillroom/main/auto-deploy.sh | bash",
    "prod:https": "curl -fsSL https://raw.githubusercontent.com/suzunayui/lazychillroom/main/auto-deploy-https.sh | bash -s --",
    "prod:ssl-setup": "./ssl-setup.sh",
    "prod:ssl-renew": "./ssl-renew.sh",
    "prod:setup": "npm install && npm run prod:db:up && sleep 15 && npm run prod:migrate",
    "prod:db:up": "podman-compose -f podman-compose.production.yaml up -d postgres redis",
    "prod:app:up": "podman-compose -f podman-compose.production.yaml up -d app",
    "prod:nginx:up": "podman-compose -f podman-compose.production.yaml up -d nginx",
    "prod:quick": "curl -fsSL https://raw.githubusercontent.com/suzunayui/lazychillroom/main/setup-production.sh | bash",
    "prod:all": "npm run prod:down-v && sleep 5 && npm run prod:build && npm run prod:up && sleep 15 && npm run prod:migrate",
    "prod:all-rootless": "npm run prod:down-v-rootless && sleep 5 && npm run prod:build-rootless && npm run prod:up-rootless && sleep 15 && npm run prod:migrate-rootless",
    "prod:reset": "npm run prod:down-v && npm run prod:clean && npm run prod:all",
        "prod:migrate": "podman exec -it lazychillroom-prod-lazychillroom-1 npm run migrate",
    "prod:migrate-rootless": "podman exec -it lazychillroom-prod-lazychillroom-1 npm run migrate",
    "prod:down-v": "podman-compose -f podman-compose.production.yaml -p lazychillroom-prod down -v",
    "prod:down-v-rootless": "podman-compose -f podman-compose.rootless.yaml -p lazychillroom-prod down -v",
    "prod:rebuild": "podman-compose -f podman-compose.production.yaml down && podman-compose -f podman-compose.production.yaml build --no-cache && podman-compose -f podman-compose.production.yaml up -d",
    "prod:up": "podman-compose -f podman-compose.production.yaml -p lazychillroom-prod up -d",
    "prod:up-rootless": "podman-compose -f podman-compose.rootless.yaml -p lazychillroom-prod up -d",
        "prod:down": "podman-compose -f podman-compose.production.yaml -p lazychillroom-prod down",
    "prod:down-rootless": "podman-compose -f podman-compose.rootless.yaml -p lazychillroom-prod down",
    "prod:build": "podman-compose -f podman-compose.production.yaml build",
    "prod:build-rootless": "podman-compose -f podman-compose.rootless.yaml build",
    "prod:logs": "podman-compose -f podman-compose.production.yaml logs -f",
    "prod:status": "./maintenance.sh status",
    "prod:monitor": "./maintenance.sh monitor",
    "prod:restart": "podman-compose -f podman-compose.production.yaml restart",
    "prod:stop": "podman-compose -f podman-compose.production.yaml stop",
    "prod:clean": "./prod-helper.sh clean",
    "prod:health": "./prod-helper.sh health",
    "prod:ssl-check": "./prod-helper.sh ssl-check",
    "prod:init": "./prod-helper.sh init",
    "prod:backup": "./prod-helper.sh backup",
    "prod:firewall": "./firewall-manager.sh status",
    "prod:firewall-setup": "./firewall-manager.sh setup",
    "test": "NODE_ENV=test jest",
    "test:basic": "NODE_ENV=test jest tests/sample.test.js tests/basic-auth.test.js tests/basic-friends.test.js tests/basic-dm.test.js",
    "test:all": "NODE_ENV=test jest tests/",
    "test:api": "NODE_ENV=test jest tests/api/",
    "test:socket": "NODE_ENV=test jest tests/socket/",
    "test:integration": "NODE_ENV=test jest tests/integration/",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:coverage:basic": "NODE_ENV=test jest --coverage tests/sample.test.js tests/basic-auth.test.js tests/basic-friends.test.js tests/basic-dm.test.js",
    "test:ci": "NODE_ENV=test jest --ci --coverage --watchAll=false"
  },
  "keywords": [
    "chat",
    "discord",
    "realtime",
    "websocket",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.2.0",
    "ioredis": "^5.6.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.0",
    "redis": "^4.6.7",
    "sharp": "^0.34.3",
    "socket.io": "^4.7.4",
    "socket.io-redis": "^5.4.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "socket.io-client": "^4.7.4",
    "supertest": "^6.3.3"
  }
}
